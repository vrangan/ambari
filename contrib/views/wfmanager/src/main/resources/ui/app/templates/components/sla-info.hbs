<div class="form-group">
  <label class="control-label col-xs-24">{{input type="checkbox" checked=slaEnabled}}Enable SLA</label>
</div>
<div class="panel panel-default">
  <div class="panel-heading" id="sla-accordion" data-toggle="collapse" data-parent="#sla-accordion" data-target="#slaCollapse">
    <h4 class="panel-title">
      SLA<i class="indicator glyphicon glyphicon-chevron-down pull-right"></i>
    </h4>
    </div>
    <div id="slaCollapse" class="panel-collapse collapse">
      <div class="form-group">
        <label class="control-label col-xs-2 padding10">Nominal Time</label>
        <div class="col-xs-3 padding10">
          {{input type="text" id="nominalTime" class="form-control" value=slaInfo.nominalTime placeholder="Nominal Time"}}
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Should Start</label>
        <div class="col-xs-3">
          {{input class="form-control" type="text" value=slaInfo.shouldStart.time placeholder="Should Start"}}
        </div>
        <div class="col-xs-2">
          <select class="form-control" name="time-unit" onchange={{action (mut slaInfo.shouldStart.unit) value="target.value"}}>
            <option value="">Select Unit</option>
            <option value="MINUTES">Minutes</option>
            <option value="HOURS">Hours</option>
            <option value="DAYS">Days</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Should End</label>
        <div class="col-xs-3">
          {{input class="form-control" type="text" value=slaInfo.shouldEnd.time placeholder="Should End"}}
        </div>
        <div class="col-xs-2">
          <select class="form-control" name="time-unit" onchange={{action (mut slaInfo.shouldEnd.unit) value="target.value"}}>
            <option value="">Select Unit</option>
            <option value="MINUTES">Minutes</option>
            <option value="HOURS">Hours</option>
            <option value="DAYS">Days</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Max Duration</label>
        <div class="col-xs-3">
          {{input class="form-control" type="text" value=slaInfo.maxDuration.time placeholder="Max Duration"}}
        </div>
        <div class="col-xs-2">
          <select class="form-control" name="time-unit" onchange={{action (mut slaInfo.maxDuration.unit) value="target.value"}}>
            <option value="">Select Unit</option>
            <option value="MINUTES">Minutes</option>
            <option value="HOURS">Hours</option>
            <option value="DAYS">Days</option>
          </select>
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Alert Events</label>
        <label class="control-label col-xs-2">
          {{input type="checkbox"}}Start Miss
        </label>
        <label class="control-label col-xs-2">
          {{input type="checkbox"}}End Miss
        </label>
        <label class="control-label col-xs-3">
          {{input type="checkbox"}}Duration Miss
        </label>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-2">Alert Emails</label>
        <div class="col-xs-3">
          {{input type="text" class="form-control" name="name" value=slaInfo.alertContact placeholder="Comma seperated Email IDs"}}
        </div>
      </div>
    </div>
  </div>
